<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Assignment2.BooksByAuthor"
             Title="Books by Author">
    <ContentPage.Content>
        <RelativeLayout>
            <!-- Page Title -->
            <Label 
            Text="Other Books by the author"
            TextColor="Black" 
            HorizontalOptions="Center" 
            FontSize="Medium" 
            FontAttributes="Bold"
            RelativeLayout.WidthConstraint="{ConstraintExpression
            Type=RelativeToParent,
            Property=Width,
            Factor=1
          }"
            RelativeLayout.HeightConstraint="{ConstraintExpression
            Type=RelativeToParent,
            Property=Height,
            Factor=0.4
          }"
            RelativeLayout.YConstraint="{ConstraintExpression 
            Type=Constant,
            ElementName=banner,
            Property=Height,
            Factor=1, Constant=60
          }"/>
            <!-- ListView Container-->
            <ListView
            x:Name="booksAuthorList"
            ItemSelected="booksAuthorList_ItemSelected"
            RelativeLayout.YConstraint="{ConstraintExpression 
            Type=Constant,
            Property=Height,
            Factor=1, Constant= 120
          }">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell Text="{Binding title}" ImageSource="{Binding cover_image}"></ImageCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </RelativeLayout>
    </ContentPage.Content>
</ContentPage>